<div class="container bg">
    <div class="row">
        <div class="center col-sm-12">
            <img src="../assets/img/burger.gif" alt="Burger Photo">
            <h1> Eat Da Burger App </h1>

        </div>
    </div>
</div>
<!--End of Row-->
<div class="row">
    <div class="col-sm-6">

        <br>
        <h2>Burgers You Can Eat!!!</h2>

        <ul>
            {{#each burgers}} {{#unless this.devoured}}
            <li>
                {{this.id}} {{this.burger_name}}

                <form class="devour-burger">
                    <input type="hidden" name="devoured" value="true">
                    <button class="btn-danger" type="submit">DEVOUR IT!!!</button>
                </form>
            </li>
            {{/unless}} {{/each}}
        </ul>
    </div>
    <div class="col-sm-6">
        <h2> DEVOURED!!!</h2>

        {{#each burgers}} {{#if this.devoured}}
        <li>
            {{this.id}} {{this.burger_name}}

        </li>
        {{/if}} {{/each}}

    </div>
</div>
<!--Row Ends-->
<div class="row">
    <div class="col-sm-12">
        <h2>ADD A BURGER!!!</h2>
        <form class="create-update-form" action="/burgers/create" method="POST">
            <div class="form-group">
                <p>Enter a burger you'd like to eat and click Submit Order button.</p>
                <input type="text" id="ca" name="burger_name">
            </div>
            <button class="btn-danger" type="submit">SUBMIT ORDER</button>
        </form>
    </div>
</div>
<!--Row Ends-->
</div>